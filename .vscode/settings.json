{
	"search.exclude": {
		"**/sorbet/rbi": true,
	},
	"sorbet.enabled": false,
	"[json]": {
		"editor.formatOnSave": true
	},
	"json.validate.enable": true,
	"json.schemaDownload.enable": true,
	"json.schemas": [
		{
			"fileMatch": [
				"rust/optify/tests/**/*.json",
				"tests/{invalid_suites,test_suites}/**/configs/**/*.json"
			],
			"url": "./schemas/feature_file.json"
		},
		{
			"fileMatch": [
				"tests/test_suites/inheritance/configs/**/*.json"
			],
			"url": "./tests/test_suites/inheritance/configs/.optify/schema.json"
		}
	],
	"yaml.schemas": {
		"./schemas/feature_file.json": [
			"rust/optify/tests/**/*.{yaml,yml}",
			"tests/{invalid_suites,test_suites}/**/configs/**/*.{yaml,yml}"
		],
		"./tests/test_suites/inheritance/configs/.optify/schema.json": [
			"tests/test_suites/inheritance/configs/**/*.{yaml,yml}"
		]
	},
	"cSpell.words": [
		"optifile"
	]
}