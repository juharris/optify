// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: watch",
			"type": "shell",
			"command": "npm run watch || source '/opt/dev/sh/nvm/nvm.sh' && nvm use 24 && npm run watch",
			"problemMatcher": {
				"owner": "esbuild",
				"fileLocation": "relative",
				"pattern": {
					"regexp": "^([^:]+):(\\d+):(\\d+): (warning|error): (.+)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^> .* watch$",
					"endsPattern": "^\\[watch\\] build finished"
				}
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
