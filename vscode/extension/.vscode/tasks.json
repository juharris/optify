{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: watch",
			"type": "shell",
			"command": "npm run watch || source '/opt/dev/sh/nvm/nvm.sh' && nvm use 24 && npm run watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
